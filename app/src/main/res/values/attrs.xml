<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RotateMenuView">
        <attr name="horizontal_margin" format="dimension" />
        <attr name="vertical_margin" format="dimension" />
        <attr name="center_rotate" format="integer" />
        <attr name="item_rotate" format="integer" />
        <attr name="back_ground_color" format="color" />
        <attr name="center_add_src" format="reference" />
    </declare-styleable>

    <declare-styleable name="RotateMenuItem">
        <attr name="img_src" format="reference" />
        <attr name="img_width" format="dimension" />
        <attr name="img_height" format="dimension" />
        <attr name="bottom_text" format="string" />
        <attr name="bottom_text_size" format="dimension" />
        <attr name="bottom_text_color" format="color" />
        <attr name="bottom_text_margin" format="dimension" />
    </declare-styleable>
</resources>